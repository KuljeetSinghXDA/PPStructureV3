# OCR Pipeline
OCR_LANG=en
OCR_VERSION=PP-OCRv5
TEXT_DET_MODEL=PP-OCRv5_server_det
TEXT_REC_MODEL=PP-OCRv5_server_rec

# Threading (critical for CPU performance)
OMP_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1

# Model source
PADDLE_PDX_MODEL_SOURCE=BOS

# PP-StructureV3 - optimized for lab reports
STRUCT_DEFAULT_FORMAT=json
USE_TABLE_RECOGNITION=true
USE_FORMULA_RECOGNITION=true
USE_CHART_RECOGNITION=false
USE_SEAL_RECOGNITION=false
USE_DOC_ORI=false
USE_UNWARP=false
USE_TEXTLINE_ORI=false

# Auto-detect CPU threads (optimal for 4 OCPU)
# CPU_THREADS=4
