# OCR language and PP-OCRv5 pipeline
OCR_LANG=en
OCR_VERSION=PP-OCRv5
TEXT_DET_MODEL=PP-OCRv5_server_det
TEXT_REC_MODEL=PP-OCRv5_server_rec

# Threading (unchanged best practice for CPU)
OMP_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1

# PP-StructureV3 feature toggles (lab reports focus)
USE_REGION_DETECTION=true
USE_TABLE_RECOGNITION=true
USE_FORMULA_RECOGNITION=false
USE_CHART_RECOGNITION=false
USE_SEAL_RECOGNITION=false
USE_DOC_ORI=true
USE_DOC_UNWARPING=true
USE_TEXTLINE_ORIENTATION=false

# Optional: chart model only if enabling charts later
# CHART_RECOGNITION_MODEL_NAME=PP-Chart2Table
