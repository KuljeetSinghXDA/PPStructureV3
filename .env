# Language and pipeline version (OCR)
OCR_LANG=en
OCR_VERSION=PP-OCRv5

# Force server-grade models for OCR (det + rec)
TEXT_DET_MODEL=PP-OCRv5_server_det
TEXT_REC_MODEL=PP-OCRv5_server_rec

# Disable MKLDNN/OneDNN CPU path to avoid ARM conv segfaults
FLAGS_use_mkldnn=0

# Threading for BLAS/OpenMP to avoid oversubscription
OMP_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1

# Optional model source mirror
PADDLE_PDX_MODEL_SOURCE=BOS

# PP-StructureV3 controls
STRUCT_DEFAULT_FORMAT=json
USE_DOC_ORI=false
USE_UNWARP=false
USE_TEXTLINE_ORI=false

# CPU utilization tuning (adjust after stability tests)
CPU_THREADS=3

# Uvicorn workers (keep 1 initially; consider 2 only if underutilized)
UVICORN_WORKERS=1
