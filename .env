PORT=8080
WORKERS=2

# English-only OCR and layout/table emphasis for lab reports
OCR_LANG=en
USE_DOC_ORIENTATION_CLASSIFY=false
USE_DOC_UNWARPING=false
USE_TEXTLINE_ORIENTATION=false

# Module toggles (optimize for lab/blood tests; charts/formulas typically not needed)
ENABLE_TABLE=true
ENABLE_SEAL=false
ENABLE_CHART=false
ENABLE_FORMULA=false

# Explicit flagship model names (auto-download to cache on first run)
LAYOUT_MODEL=PP-DocLayout_plus-L
OCR_VERSION=PP-OCRv5
TABLE_MODEL=PP-TableMagic-L
CHART_MODEL=PP-Chart2Table-L
FORMULA_MODEL=PP-FormulaNet_plus-L

# Page controls
MAX_PAGES=50
MAX_FILE_MB=40
